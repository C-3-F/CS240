<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventInformation"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center|center_vertical"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:visibility="gone">


    <ImageView
        android:id="@+id/personExpandableListIcon"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:contentDescription="Event or Person Icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personExpandableListInformationText1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />

        <TextView
            android:id="@+id/personExpandableListInformationText2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />

    </LinearLayout>
</LinearLayout>

